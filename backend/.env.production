# Production Environment Configuration Template
# Copy this file to .env and update values for your production environment

# Database Configuration
# Format: postgresql://username:password@host:port/database
# Note: Use %40 to encode @ symbol in password (e.g., admin@123 becomes admin%40123)
DATABASE_URL=postgresql://postgres:admin%40123@localhost:5432/modbus_monitor

# Application Settings
APP_NAME=Modbus Temperature Monitor
DEBUG=False

# Modbus Settings
# Modbus read timeout in seconds (how long to wait for each device response)
# Lower = faster cycle, but may miss slow devices
# Higher = more reliable, but slower cycle
MODBUS_TIMEOUT=1

# Polling interval in seconds - how often to read ALL devices in one cycle
# Set to 1 for high-frequency data capture (1 reading/second per device)
# Set to 5 for slower updates (reduces Modbus traffic)
MODBUS_POLL_INTERVAL=1

# Common Modbus Register Settings (Applied to all devices)
MODBUS_REGISTER_ADDRESS=4002
MODBUS_FUNCTION_CODE=3
MODBUS_START_REGISTER=1
MODBUS_REGISTER_COUNT=1

# Ambient Temperature Register Settings
AMBIENT_TEMP_START_REGISTER=5

# Configuration Access PIN (4 digits)
# IMPORTANT: Change this for production!
CONFIG_PIN=1234

# Server Configuration (for network access)
# Host: 0.0.0.0 to listen on all network interfaces
# Port: 8000 for backend API
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
